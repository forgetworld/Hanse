# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET        /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                 controllers.Assets.versioned(path="/public", file: Asset)

GET         /ping                                         @controllers.Application.ping

# 创建商品
POST        /commodities                                  @controllers.TradeCtrl.createCommodity()

# 商品详情
GET         /commodities/$commodityId<\d+>                @controllers.CommodityCtrl.getCommodityDetail(commodityId: Long)

# 获取商品列表
#GET         /commodities
#
#/app/api/index.jsp?action=getCommodities&sort=2..
#
#REST

# 创建订单
POST        /orders                                       @controllers.TradeCtrl.createOrder()
# GET         /privateKey                                                     @controllers.TradeCtrl.privateKey()

#----------支付接口----------
#微信预支付
POST        /orders/:id/payments                          @controllers.PaymentCtrl.createPayments(id:String)

#查询订单
GET         /orders/:id/payments                          @controllers.PaymentCtrl.getPayments(id:String)

#微信回调
POST        /payment-webhook/wechat                       @controllers.PaymentCtrl.wechatCallback()

# 预支付
POST        /prePay                                       @controllers.TradeCtrl.prePay()
# 支付结果回调
POST        /notifyResult                                 @controllers.TradeCtrl.notifyResult()

#----------商家接口----------
#商家详情
GET         /sellers/:id/                                 @controllers.SellerCtrl.getSeller(id:Long)

#商家的商品列表
GET         /sellers/:id/commodities                      @controllers.SellerCtrl.getCommoditiesOfSeller(id:String)

#测试接口转发
GET         /testhanse                                    @controllers.TradeCtrl.testhanse()

#首页专题
GET         /columns                                      @controllers.MiscCtrl.getColumns()

#首页专题商品列表
GET         /columns/commodities                          @controllers.MiscCtrl.getSpecialCommodities(topicType: String)

#首页推荐商品列表
GET         /recommend                                    @controllers.MiscCtrl.getRecommendCommodities()

#根据店铺id查找商品列表
GET         /commodities                                  @controllers.CommodityCtrl.getCommoditiesBySellerId(sellerId: Long, sortBy: String, sort: String, start: Int, count: Int)

#商品分类列表
GET         /commodities/$localityId<\d+>/category        @controllers.MiscCtrl.getCommodityCategoryList(localityId: String)

#目的地商品列表
GET         /commodities/$localityId<\d+>                 @controllers.CommodityCtrl.getCommoditiesByLocalityId(localityId: String, sortBy: String, sort: String, start: Int, count: Int)
